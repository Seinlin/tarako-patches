+static uint32_t getMaskLength(const uint32_t mask)
+{
+  uint32_t netmask = ntohl(mask);
+  uint32_t len = 0;
+  while (netmask & 0x80000000) {
+    len++;
+    netmask = netmask << 1;
+  }
+  return len;
+}
